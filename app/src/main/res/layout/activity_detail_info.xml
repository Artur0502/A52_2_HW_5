<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".ui.detail.DetailInfoActivity">


    <ImageView
        android:id="@+id/image_view_icon"
        android:layout_width="380dp"
        android:layout_height="300dp"
        android:layout_margin="10dp"
        android:src="@drawable/img"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <TextView
        android:id="@+id/text_view_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:padding="10dp"
        android:fontFamily="casual"
        app:layout_constraintTop_toBottomOf="@id/image_view_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Asus TUF Gaming"/>

    <TextView
        android:id="@+id/text_view_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="30sp"
        android:padding="10dp"
        android:fontFamily="casual"
        app:layout_constraintTop_toBottomOf="@id/text_view_tittle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Asus TUF Gaming"/>


</androidx.constraintlayout.widget.ConstraintLayout>